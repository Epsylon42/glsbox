<!doctype html>
<html lang="en">

    <head>
        {{> head}}
    </head>

    <body>
        {{> nav}}

        <div id="content">
            <ul class="shaders">
                {{#shaders}}
                <li class="card">
                    <div class="preview">
                        <a href="/view/{{id}}">
                            {{#previewUrl}}
                            <img src="{{.}}">
                            {{/previewUrl}}
                            {{^previewUrl}}
                            <div class="placeholder"></div>
                            {{/previewUrl}}
                        </a>
                    </div>

                    <div class="data">
                        <p class="text-box"><a href="/view/{{id}}">{{name}}</a></p>
                        <div class="description text-box">{{{ descriptionHTML }}}</div>
                    </div>
                </li>
                {{/shaders}}

                <li class="phantom card" />
            </ul>
        </div>

        {{> footer}}
    </body>

    {{> scripts}}
</html>
