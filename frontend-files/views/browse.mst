<!doctype html>
<html lang="en">

    <head>
        {{> head}}
    </head>

    <body>
        {{> nav}}

        <div class="section tile is-ancestor">
            {{#shaders}}
            <div class="tile is-parent is-6">
                <div class="tile is-child box">
                    <div class="media">
                        <div class="media-left preview">
                            <a href="/view/{{id}}">
                                {{#previewUrl}}
                                <img src="{{.}}">
                                {{/previewUrl}}
                                {{^previewUrl}}
                                <div class="placeholder"></div>
                                {{/previewUrl}}
                            </a>
                        </div>

                        <div class="media-content">
                            <p><strong><a href="/view/{{id}}">{{name}}</a></strong></p>
                            <hr>
                            <div class="content">
                                {{{ descriptionHTML }}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/shaders}}
        </div>

        {{> footer}}
    </body>

    {{> scripts}}
</html>
